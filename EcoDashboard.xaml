<UserControl x:Class="EcoDashboard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="#071827">

    <UserControl.Resources>
        <Color x:Key="HeaderColor">#0B1F3A</Color>
        <SolidColorBrush x:Key="AccentBrush">#c39f32</SolidColorBrush>
        <!-- golden -->
        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="18"/>
            <Setter Property="Margin" Value="10"/>
            <Setter Property="Background" Value="#0F2436"/>
            <Setter Property="SnapsToDevicePixels" Value="True"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#000000" Opacity="0.4" BlurRadius="10" ShadowDepth="2"/>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="BigNumber" TargetType="TextBlock">
            <Setter Property="FontFamily" Value="Consolas"/>
            <Setter Property="FontSize" Value="72"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
        <Style x:Key="LabelSmall" TargetType="TextBlock">
            <Setter Property="FontFamily" Value="Consolas"/>
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="Foreground" Value="#BFD6E6"/>
        </Style>
    </UserControl.Resources>

    <Grid Width="1600" Height="900">
        <Grid.RowDefinitions>
            <RowDefinition Height="80"/>
            <!-- header -->
            <RowDefinition Height="*"/>
            
            <RowDefinition Height="200"/>
            <!-- body -->
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0">
            <DockPanel LastChildFill="True" VerticalAlignment="Center">
                <Image Source="/Assets/logo.png"
                       Width="56"
                       Height="56"
                       Margin="12"
                       VerticalAlignment="Center"
                       DockPanel.Dock="Left"/>
                <TextBlock x:Name="TitleText"
                           Text="ENVIRONMENT DASHBOARD"
                           Foreground="White"
                           FontFamily="Consolas"
                           FontWeight="Bold"
                           FontSize="30"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Center"/>
                <TextBlock x:Name="ClockText"
                           DockPanel.Dock="Right"
                           Margin="12,0,20,0"
                           Foreground="#BFD6E6"
                           FontFamily="Consolas"
                           FontSize="25"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Right"/>
            </DockPanel>
        </Border>

        <!-- Body -->
        <Grid Grid.Row="1" Margin="18">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <!-- big left card -->
                <ColumnDefinition Width="*"/>
                <!-- right column stacked -->
            </Grid.ColumnDefinitions>

            <!-- Left: Solar big card -->
            <Border Grid.Column="0" Style="{StaticResource CardStyle}" Background="{StaticResource AccentBrush}" Height="Auto">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- icon + label -->
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Top" Margin="6">
                        <!-- simple vector icon -->
                        <Viewbox Width="200" Height="200" Margin="6,0,12,0" VerticalAlignment="Center">
                           <Canvas Width="120" Height="120">
    <!-- Solar panel -->
    <Rectangle Width="80" Height="40" Fill="#1E90FF" Stroke="Black"
               RadiusX="4" RadiusY="4"
               Canvas.Left="20" Canvas.Top="60"/>
    <Line X1="20" Y1="70" X2="100" Y2="70" Stroke="Black" StrokeThickness="2"/>
    <Line X1="20" Y1="80" X2="100" Y2="80" Stroke="Black" StrokeThickness="2"/>
    <Line X1="20" Y1="90" X2="100" Y2="90" Stroke="Black" StrokeThickness="2"/>

    <!-- Sun -->
    <Path Fill="Gold" Data="M20,10 A10,10 0 1 1 19.9,10 Z"/>
    <Path Stroke="Gold" StrokeThickness="2"
          Data="M20,0 L20,5 M20,25 L20,30 
                M0,10 L5,10 M35,10 L40,10 
                M7,3 L10,7 M30,3 L27,7 
                M7,17 L10,13 M30,17 L27,13"/>
</Canvas>
                        </Viewbox>

                        <StackPanel VerticalAlignment="Center">
                            <TextBlock Text="SOLAR ENERGY" FontFamily="Consolas" FontSize="60" FontWeight="Bold" Foreground="Black"/>
                            <TextBlock Text="Current output" Foreground="Black" FontSize="30" Margin="0,4,0,0"/>
                        </StackPanel>
                    </StackPanel>

                    <!-- big number / stats -->
                    <Grid Grid.Row="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="2*"/>
                            <ColumnDefinition Width="1*"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="12">
                            <TextBlock x:Name="SolarValue" Text="16.2 kW" FontSize="120" FontWeight="Bold" Style="{StaticResource BigNumber}" Foreground="White"/>
                            <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                                <TextBlock Text="Today's energy" FontSize="30" Style="{StaticResource LabelSmall}" Margin="0,0,16,0"/>
                                <TextBlock x:Name="SolarToday" Text="78.4 kWh" FontSize="33"  Style="{StaticResource LabelSmall}"/>
                            </StackPanel>
                        </StackPanel>

                        <!-- right small stats -->
                        <StackPanel Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="12">
                            <Border Background="#0B1F3A" Padding="60" Width="300" CornerRadius="6">
                                <StackPanel Background="#0B1F3A" HorizontalAlignment="Center" VerticalAlignment="Center">
                                    <TextBlock Text="CO₂ REDUCTION" Style="{StaticResource LabelSmall}" HorizontalAlignment="Center"/>
                                    <TextBlock x:Name="Co2ValueSmall" Text="9.0 kg" FontFamily="Consolas" FontSize="40" Foreground="White" FontWeight="Bold"/>
                                </StackPanel>
                            </Border>
                        </StackPanel>
                    </Grid>
                </Grid>
            </Border>

            <!-- Right column -->
            <StackPanel Grid.Column="1" Orientation="Vertical" VerticalAlignment="Stretch">
                <!-- CO2 card -->
                <Border Style="{StaticResource CardStyle}" Background="#12354A" Height="260">
                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                        <Viewbox Width="64" Height="64" Margin="6">
                            <Canvas Width="24" Height="24">
                                <Path Data="M2,12 A10,10 0 1 0 22,12" Stroke="White" StrokeThickness="2" Fill="Transparent"/>
                                <TextBlock Text="CO₂" Foreground="White" FontWeight="Bold" FontSize="10" Canvas.Left="4" Canvas.Top="6"/>
                            </Canvas>
                        </Viewbox>
                        <TextBlock Text="CO₂ EMISSION" Style="{StaticResource LabelSmall}" Margin="0,8,0,4"/>
                        <TextBlock x:Name="Co2Value" Text="9.0 kg" FontFamily="Consolas" FontSize="48" FontWeight="Bold" Foreground="White"/>
                        <TextBlock x:Name="Co2Today" Text="Today: -9.0 kg" Style="{StaticResource LabelSmall}" Margin="0,6,0,0"/>
                    </StackPanel>
                </Border>

                <!-- Trees card -->
                <Border Style="{StaticResource CardStyle}" Background="#0F2436" Height="160">
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Left">
                        <Viewbox Width="56" Height="56" Margin="8">
                            <Canvas Width="24" Height="24">
                                <Path Data="M12,2 C9,6 10,8 8,10 C14,11 14,14 12,16 C18,14 18,10 16,8 Z" Fill="#7ED957"/>
                            </Canvas>
                        </Viewbox>
                        <StackPanel Margin="8">
                            <TextBlock Text="TREES PLANTED" Style="{StaticResource LabelSmall}"/>
                            <TextBlock x:Name="TreesValue" Text="3.2" FontFamily="Consolas" FontSize="44" FontWeight="Bold" Foreground="White"/>
                            <TextBlock Text="Equivalent environmental impact" Style="{StaticResource LabelSmall}" Margin="0,4,0,0"/>
                        </StackPanel>
                    </StackPanel>
                </Border>
            </StackPanel>
        </Grid>

    </Grid>
</UserControl>
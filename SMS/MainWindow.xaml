<Window x:Class="MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:SMS"
        Title="School Display"
        WindowState="Maximized"
        WindowStyle="None"
        Background="Black"
        Loaded="MainWindow_Loaded">
    <Viewbox Stretch="Uniform">
        <!-- 16:9 -->
        <Grid Width="1600" Height="900" Background="Black">
            
            <Grid.RowDefinitions>
                <RowDefinition Height="100"/>
                <!-- Top bar -->
                <RowDefinition Height="*"/>
                <!-- Main content -->
                <RowDefinition Height="80"/>
                <!-- Bottom ticker -->
            </Grid.RowDefinitions>



            <!-- 🔹 Top bar -->
            <DockPanel Grid.Row="0" Background="#0B1F3A">
                <Image Source="E:/dpr-logo.png"
                       Width="222"
                       Height="50"
                       Margin="10"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Left"/>
                <TextBlock x:Name="TitleTextBlock"
                       Text="DPR AVIATION COLLEGE"
                       Foreground="White"
                       FontWeight="Bold"
                       FontSize="40"
                       VerticalAlignment="Center"
                       Margin="20,0,0,0"/>
            </DockPanel>

            <!-- 🔹 Main content: Video with text overlay -->
            <Grid Grid.Row="1">
                <!-- Static Page (Announcements, Weather, etc.) -->
                <Grid x:Name="StaticPage" Background="#071425">
                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                        <TextBlock Text="📢 School Announcements" 
                       Foreground="White" FontSize="60" FontWeight="Bold"
                       HorizontalAlignment="Center"/>
                        <TextBlock Text="🌤 Weather: Sunny 31°C" 
                       Foreground="Yellow" FontSize="40" 
                       HorizontalAlignment="Center" Margin="0,20,0,0"/>
                        <TextBlock Text="🏆 Sportsfest Next Week!" 
                       Foreground="Cyan" FontSize="40"
                       HorizontalAlignment="Center" Margin="0,20,0,0"/>
                    </StackPanel>
                </Grid>

                <local:EcoDashboard x:Name="EcoDashboardPage" Visibility="Collapsed"/>

                <!-- Video Player -->
                <MediaElement x:Name="AdVideo"
                  LoadedBehavior="Manual"
                  UnloadedBehavior="Manual"
                  Stretch="UniformToFill"
                  Volume="0"
                  Opacity="0"/>
                <!-- hidden initially -->

                <local:FlightBoard x:Name="FlightBoardAds" Visibility="Collapsed"/>
            </Grid>

            <!-- 🔹 Bottom ticker -->
            <Canvas x:Name="TickerCanvas" Grid.Row="2" Background="#0B1F3A">
                <TextBlock x:Name="TickerText"
                       Foreground="White"
                       FontSize="28"
                       Margin="20,20,20,20"
                       Canvas.Left="2600"
                       VerticalAlignment="Center"/>
            </Canvas>
        </Grid>
    </Viewbox>

</Window>